<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snipthink.medicai.MainActivity">
<RelativeLayout
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/button_round"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/first_name_view"
        android:layout_marginLeft="20sp"
        android:hint="First Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/first_name_view"
        android:id="@+id/last_name_view"
        android:layout_marginLeft="20sp"
        android:hint="Last Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/first_name_view"
        android:id="@+id/gender_view"
        android:layout_marginLeft="20sp"
        android:hint="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_toRightOf="@+id/gender_view"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/first_name_view"
        android:id="@+id/date_of_birth"
        android:layout_marginLeft="40sp"
        android:hint="Date of Birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView


        android:layout_marginTop="20dp"
        android:layout_below="@+id/gender_view"
        android:id="@+id/email_view"
        android:layout_marginLeft="20dp"
        android:hint="Email Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/email_view"
        android:id="@+id/adhaar_view"
        android:hint="Aadhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/adhaar_view"
        android:layout_below="@+id/email_view"
        android:id="@+id/mob_view"
        android:hint="Contact No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        android:layout_below="@+id/adhaar_view"
        android:id="@+id/zip_view"
        android:hint="Zip/Pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>


</RelativeLayout>
